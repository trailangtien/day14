<%= form_for(@comment, html: { multipart: true },
                                           remote: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="field">
        <%= f.text_area :content, placeholder: "Compose new comment..." %>
      </div>
      <%= f.submit "Edit", class: "btn btn-primary" %>
    <% end %>
