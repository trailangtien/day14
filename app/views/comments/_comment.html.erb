<li id="comment-<%= comment.id %>">
  <%= link_to gravatar_for(comment.user, size: 50), comment.user %>
  <span class="user"><%= link_to comment.user.name, comment.user %></span>
  <span class="content" id="comment_content-<%= comment.id %>"><%= simple_format comment.content %></span>
  <span class="timestamp">
    Commented <%= time_ago_in_words(comment.created_at) %> ago.
  </span>
  <% if current_user?(comment.user) || current_user?(comment.entry.user) %>
      <%= link_to "delete ||", comment, method: :delete,
                                     data: { confirm: "You sure?" },
                                     remote: true %>
  <% end %>
  <% if current_user?(comment.user) %>
      <%= link_to "edit", edit_comment_path(comment),
                          remote: true%>
    <% end %>
</li>
